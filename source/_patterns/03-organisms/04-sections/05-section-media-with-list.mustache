<section class="section {{ styleModifier }}" data-type="media">
  <div class="section__wrapper">
    {{#is_default}}
      {{> organisms-media-with-list-list:media-list--default }}
    {{/is_default}}

    {{#is_small}}
      {{> organisms-media-with-list-list:media-list--small }}
    {{/is_small}}

    {{#is_default_dark}}
      {{> organisms-media-with-list-list:media-list--default media-list--dark }}
    {{/is_default_dark}}

    {{#is_small_dark}}
      {{> organisms-media-with-list-list:media-list--small media-list--dark }}
    {{/is_small_dark}}

    {{#is_hero}}
      {{> organisms-media-with-list-list:media-list--hero }}
    {{/is_hero}}

    {{#is_hero_dark}}
      {{> organisms-media-with-list-list:media-list--hero media-list--dark }}
